doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Workout
    link(href='/css/style.css', type='text/css', rel='stylesheet')
    link(rel='stylesheet', href='http://domain.tld/screen.css', type='text/css', media='Screen')
    link(rel='stylesheet', href='http://domain.tld/mobile.css', type='text/css', media='handheld')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js')
  body
    script(type='text/javascript', src='/javascripts/global.js')
    script(type='text/javascript', src='/javascripts/userauth.js')
    hr
    h1  Gymno-Phily
    hr
    ul.nav
      li.flinks
        a.hlinks(href='/')  Home
